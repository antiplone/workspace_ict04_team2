<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	  
<mapper namespace="com.spring.travel_planner.dao.HomeDAO">  <!-- namespace="패키지명.인터페이스" -->

	 <resultMap id="userMapMain" type="com.spring.travel_planner.dto.RecommendCourseDTO">
      <id     property="tr_area_id"        		column="tr_area_id" />
      <result property="tr_course_id"         	column="tr_course_id" />
      <result property="tr_course_image"        column="tr_course_image" />
      <result property="tr_course_title"        column="tr_course_title" />
      <result property="tr_course_taketime"     column="tr_course_taketime" />
      <result property="tr_course_tag"        	column="tr_course_tag" />
      <result property="tr_course_map"         	column="tr_course_map" />
  	 </resultMap>

	<!-- 추천코스 목록 조회 -->
	<select id="mainRecommendList" parameterType="java.util.Map" resultMap="userMapMain">
		SELECT tr_area_id tr_area_id
	     , tr_course_id tr_course_id
	     , tr_course_image tr_course_image
		 , tr_course_title tr_course_title
		 , tr_course_taketime tr_course_taketime
	     , tr_course_tag tr_course_tag
		 , tr_course_map tr_course_map
	  FROM travel_recommendCourse_tbl
	  WHERE <![CDATA[ tr_area_id between #{start1} and #{end1}]]>
	  ORDER BY tr_course_id
	</select>

</mapper> 